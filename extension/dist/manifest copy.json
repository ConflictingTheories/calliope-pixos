{
  "manifest_version": 2,
  "short_name": "Calliope Pixos",
  "name": "Calliope Pixos Plugin",
  "version": "1.0",
  "description": "This extension will help you manage your Pixos Avatar and experience Pixos adventures more smoothly.",
  "icons": {
    "16": "logo192.png",
    "48": "logo192.png",
    "128": "logo192.png"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "chrome_url_overrides": {
    "newtab": "newTab.html"
  },
  "browser_action": {
    "default_title": "Pixos",
    "default_popup": "index.html"
  },
  "permissions": ["storage", "activeTab", "declarativeContent"]
}
